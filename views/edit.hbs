<form action="/users/{{ user.id }}?_method=PUT" method="POST" enctype="multipart/form-data" style="display: inline;">
  <div class="form-label-group">
    <label for="inputName">Name</label>
    <input class="form-control" type="text" placeholder="name" name="name" value="{{ user.name }}">
  </div>
  <div class="form-label-group">
    <label for="image">Image</label>
    <input type="file" class="form-control-file" id="image" name="image">
  </div>
  <div class="input-group">
    <div class="input-group-append mt-4">
      <button class=" btn btn-primary" type="submit">Submit</button>
    </div>
  </div>
</form>